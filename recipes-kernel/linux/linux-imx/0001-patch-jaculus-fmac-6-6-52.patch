+
+	if (!bus_if->bt_if)
+		return;
+
+	brcmf_dbg(INTR, "F%d IB intr triggered\n", func->num);
+
+	if (bt_if->bt_sdio_int_cb)
+		bt_if->bt_sdio_int_cb(bt_if->bt_data);
