+static void *inf_btsdio_get_func_entity(struct brcmf_sdio_dev *sdiodev, u8 fn)
+{
+	struct sdio_func *func = NULL;
+
+	if (!sdiodev) {
+		brcmf_err("sdiodev is null\n");
+		return NULL;
+	}
+
+	if (fn == SDIO_FUNC_1)
+		func = sdiodev->func1;
+	else if (fn == SDIO_FUNC_2)
+		func = sdiodev->func2;
+	else if (fn == SDIO_FUNC_3)
+		func = sdiodev->func3;
+
+	return func;
+}
