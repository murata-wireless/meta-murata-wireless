+	reg->addr = addr;
+	reg->val = val;
+	brcmf_err("[%5lld.%06ld] %8s err: %d\taddr: 0x%x\tval: 0x%x\n",
+		  cmd->time.tv_sec, cmd->time.tv_nsec / NSEC_PER_USEC,
+		  inf_btsdio_err_char(cmd->type), err, addr, val);
