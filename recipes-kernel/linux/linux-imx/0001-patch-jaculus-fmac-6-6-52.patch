+	memset(cfg->pfn_data.network_blob_data, '\0', buflen);
+	memcpy(cfg->pfn_data.network_blob_data, (u8 *)data + PFN_CONFIG_AND_COUNT_SIZE, buflen);
+	pfn_send_network_blob_fw(wiphy, wdev);
+	brcmf_dbg(TRACE, "Exit\n");
+	return 0;
+}
