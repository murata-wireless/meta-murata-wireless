+static void _btsdio_int_handler(struct sdio_func *func)
+{
+	struct brcmf_bus *bus_if = NULL;
+	struct brcmf_sdio_dev *sdiodev = NULL;
+	struct inf_bt_if *bt_if = NULL;
+
+	if (!func) {
+		brcmf_err("func is null\n");
